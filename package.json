{
	"name": "webpack-base-project",
	"version": "1.0.0",
	"description": "A base project for JS development",
	"main": "index.js",
	"repository": "https://github.com/4m-world/webpack-base-project.git",
	"author": "Mohammed M. Melhem",
	"license": "MIT",
	"scripts": {
		"test": "jest",
		"test:coverage": "jest --coverage",
		"start": "cross-env NODE_ENV=development webpack-dev-server --config config/webpack.dev.js",
		"build": "cross-env NODE_ENV=development webpack --config config/webpack.prod.js",
		"build:clean": "rimraf ./build",
		"lint": "npm run lint:js",
		"lint:js": "eslint src --ext .js,.jsx,.md --cache --cache-location .cache/.eslintcahce",
		"lint:js:fix": "npm run lint:js --fix"
	},
	"jest": {
		"moduleNameMapper": {
			"\\.(css|sass|scss|less)$": "<rootDir>/__mocks__/styleMock.js",
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.(html|css)": [
			"prettier --write",
			"git add"
		],
		"*.(js|jsx)": [
			"npm run lint",
			"npm run test"
		]
	},
	"keywords": [
		"webpack",
		"webpack 4",
		"hmr",
		"base project"
	],
	"devDependencies": {
		"@babel/core": "^7.6.0",
		"@babel/plugin-proposal-class-properties": "^7.5.5",
		"@babel/plugin-transform-modules-commonjs": "^7.6.0",
		"@babel/preset-env": "^7.6.0",
		"babel-eslint": "^10.0.3",
		"babel-loader": "^8.0.6",
		"babel-plugin-dynamic-import-node": "^2.3.0",
		"babel-plugin-lodash": "^3.3.4",
		"clean-webpack-plugin": "^3.0.0",
		"copy-webpack-plugin": "^5.0.4",
		"core-js": "^3.2.1",
		"cross-env": "^6.0.0",
		"css-loader": "^3.2.0",
		"cssnano": "^4.1.10",
		"eslint": "^6.4.0",
		"eslint-config-airbnb": "^18.0.1",
		"eslint-config-prettier": "^6.3.0",
		"eslint-loader": "^3.0.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-prettier": "^3.1.1",
		"eslint-plugin-react": "^7.14.3",
		"eslint-plugin-react-hooks": "^2.0.1",
		"file-loader": "^4.2.0",
		"html-webpack-plugin": "^3.2.0",
		"husky": "^3.0.5",
		"lint-staged": "^9.3.0",
		"mini-css-extract-plugin": "^0.8.0",
		"node-sass": "^4.12.0",
		"optimize-css-assets-webpack-plugin": "^5.0.3",
		"postcss-loader": "^3.0.0",
		"postcss-preset-env": "^6.7.0",
		"prettier": "^1.18.2",
		"regenerator-runtime": "^0.13.3",
		"rimraf": "^3.0.0",
		"sass-loader": "^8.0.0",
		"style-loader": "^1.0.0",
		"terser-webpack-plugin": "^2.1.0",
		"url-loader": "^2.1.0",
		"webpack": "^4.40.2",
		"webpack-cli": "^3.3.9",
		"webpack-dev-server": "^3.8.1",
		"webpack-merge": "^4.2.2"
	},
	"dependencies": {
		"@babel/plugin-syntax-dynamic-import": "^7.2.0",
		"babel-jest": "^24.9.0",
		"jest": "^24.9.0",
		"lodash": "^4.17.15",
		"react": "^16.9.0"
	}
}
